<form role="form" method="post" action="<%= user_registration_path %>">
    <div class="panel panel-default">
      <div class="clearfix panel-heading">
        <h3 class="large pull-left">Mon compte</h3>
        <button type="submit" class="pull-right btn btn-default">Enregistrer</button>
      </div>
      <div class="clearfix"></div>
      <div class=" clearfix panel-body">
        <div class="form-group">
          <label for="building_id">Batiment</label>
          <select class="select2-box form-control" id="building_id">
            <% Building.all.each do |building| %>
                <option value="<%= building.id %>"<%= 'selected="true"' if current_user.building == building %>><%= building.name %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <label for="room">Chambre</label>
          <input type="text" class="form-control" id="room" placeholder="n° chambre">
        </div>
        <div class="form-group">
          <label for="laundrette_id">Laverie préféré</label>
          <select class="select2-box form-control" id="laundrette_id">
            <% Laundrette.all.each do |laundrette| %>
                <option value="<%= laundrette.id %>"<%= 'selected="true"' if current_user.laundrette == laundrette %>><%= laundrette.name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
</form>
