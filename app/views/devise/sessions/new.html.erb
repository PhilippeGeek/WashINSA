<div class="panel panel-default" id="login">
  <div class="panel-heading">Connexion aux laveries</div>
  <div class="panel-body">
    <%= render 'layouts/messages' %>
    <%= form_for(User.new, :url => session_path(User.new), :html=>{role: :form}) do |f| %>
        <div class="form-group"><%= f.text_field :email, :autofocus => true, :placeholder => 'Login', :class=>'form-control block' %></div>
        <div class="form-group"><%= f.password_field :password, :placeholder => 'Mot de passe',:class=>'form-control block' %></div>
        <%= f.submit 'Sign in', :class => 'btn btn-primary block form-control' %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
